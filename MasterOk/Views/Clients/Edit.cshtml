@model MasterOk.Models.ModelDataBase.Client

@{
    ViewData["Title"] = "Редактирование клиента";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Редактирование клиентаdit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="EmailClient" class="control-label"></label>
                <input asp-for="EmailClient" class="form-control" />
                <span asp-validation-for="EmailClient" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PasswordClient" class="control-label"></label>
                <input asp-for="PasswordClient" class="form-control" />
                <span asp-validation-for="PasswordClient" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FirstLastNameClient" class="control-label"></label>
                <input asp-for="FirstLastNameClient" class="form-control" />
                <span asp-validation-for="FirstLastNameClient" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NumberPhone" class="control-label"></label>
                <input asp-for="NumberPhone" class="form-control" />
                <span asp-validation-for="NumberPhone" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProcentSalary" class="control-label"></label>
                <input asp-for="ProcentSalary" class="form-control" />
                <span asp-validation-for="ProcentSalary" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
                <a asp-action="Index" role="button" class="btn btn-secondary">Вернуться к списку</a>
            </div>
        </form>
    </div>
</div>
