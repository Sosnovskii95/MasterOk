@model MasterOk.Models.ModelDataBase.PayMethod

@{
    ViewData["Title"] = "Удаление способа";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Вы действительно хотите удалить выбранный способ оплаты? Удаление приведет к уаделнию связанных данных</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TitlePayMethod)
        </dt>
