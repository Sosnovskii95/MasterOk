@model MasterOk.Models.ModelDataBase.PayMethod

@{
    ViewData["Title"] = "Редактирование способа";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Редактирование способа</h1>
<hr />
<div class="row">
    <div class="col-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="TitlePayMethod" class="control-label"></label>
                <input asp-for="TitlePayMethod" class="form-control" />
                <span asp-validation-for="TitlePayMethod" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
                <a asp-action="Index" role="button" class="btn btn-secondary">Вернуться к списку</a>
            </div>
        </form>
    </div>
</div>

