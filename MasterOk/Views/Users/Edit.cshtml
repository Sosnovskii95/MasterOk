@model MasterOk.Models.ModelDataBase.User

@{
    ViewData["Title"] = "Редактирование пользователя";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Редактирование пользователя</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
           <div class="form-group mb-3">
                <label asp-for="EmailUser" class="control-label"></label>
                <input asp-for="EmailUser" class="form-control" />
                <span asp-validation-for="EmailUser" class="text-danger"></span>
            </div>
           <div class="form-group mb-3">
                <label asp-for="LoginUser" class="control-label"></label>
                <input asp-for="LoginUser" class="form-control" />
                <span asp-validation-for="LoginUser" class="text-danger"></span>
            </div>
           <div class="form-group mb-3">
                <label asp-for="PasswordUser" class="control-label"></label>
                <input asp-for="PasswordUser" class="form-control" />
                <span asp-validation-for="PasswordUser" class="text-danger"></span>
            </div>
           <div class="form-group mb-3">
                <label asp-for="FirstLastNameStaff" class="control-label"></label>
                <input asp-for="FirstLastNameStaff" class="form-control" />
                <span asp-validation-for="FirstLastNameStaff" class="text-danger"></span>
            </div>
           <div class="form-group mb-3">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
           <div class="form-group mb-3">
                <label asp-for="NumberPhoneStaff" class="control-label"></label>
                <input asp-for="NumberPhoneStaff" class="form-control" />
                <span asp-validation-for="NumberPhoneStaff" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ActiveUser" /> @Html.DisplayNameFor(model => model.ActiveUser)
                </label>
            </div>
           <div class="form-group mb-3">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
                <a asp-action="Index" role="button" class="btn btn-secondary">Вернуться к списку</a>
            </div>
        </form>
    </div>
</div>

