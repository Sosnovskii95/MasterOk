@model IEnumerable<MasterOk.Models.ModelDataBase.User>

@{
    ViewData["Title"] = "Пользователи";
}

<p>
    <a asp-action="Create" role="button" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmailUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoginUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PasswordUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoginUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PasswordUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Staff.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Информация</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
