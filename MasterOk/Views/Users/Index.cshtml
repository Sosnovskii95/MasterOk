@model IEnumerable<MasterOk.Models.ModelDataBase.User>

@{
    ViewData["Title"] = "Список пользователей";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Список пользователей</h1>
<hr />
<p>
    <a asp-action="Create" role="button" class="btn btn-primary">Добавить нового пользователя</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmailUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoginUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PasswordUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstLastNameStaff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberPhoneStaff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActiveUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>Функции</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoginUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PasswordUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstLastNameStaff)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberPhoneStaff)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActiveUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.TitleRole)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" role="button" class="btn btn-secondary">Редактировать</a>
                    <a asp-action="Details" asp-route-id="@item.Id" role="button" class="btn btn-info">Информация</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" role="button" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
