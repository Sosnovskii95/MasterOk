@model MasterOk.Models.ModelDataBase.User

@{
    ViewData["Title"] = "Новый пользователь";
}

<div class="row justify-content-center">
    <div class="col-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="EmailUser" class="control-label"></label>
                <input asp-for="EmailUser" class="form-control" />
                <span asp-validation-for="EmailUser" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LoginUser" class="control-label"></label>
                <input asp-for="LoginUser" class="form-control" />
                <span asp-validation-for="LoginUser" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PasswordUser" class="control-label"></label>
                <input asp-for="PasswordUser" class="form-control" />
                <span asp-validation-for="PasswordUser" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="StaffId" class="control-label"></label>
                <select asp-for="StaffId" class ="form-control" asp-items="ViewBag.StaffId"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" class ="form-control" asp-items="ViewBag.RoleId"></select>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

