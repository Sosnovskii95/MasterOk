@model IEnumerable<MasterOk.Models.ModelDataBase.SubCategory>

@{
    ViewData["Title"] = "Подкатегории";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Список подкатегорий</h1>
<hr />
<p>
    <a asp-action="Create" role="button" class="btn btn-primary">Добавить новую подкатегорию</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TitleSubCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>Функции</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TitleSubCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.TitleCategory)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" role="button" class="btn btn-secondary">Редактировать</a>
                    <a asp-action="Details" asp-route-id="@item.Id" role="button" class="btn btn-info">Информация</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" role="button" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
