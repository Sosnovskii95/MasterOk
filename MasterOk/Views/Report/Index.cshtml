
@{
    ViewData["Title"] = "Отчет";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Отчеты</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div class="form-group">
                <label class="control-label">Клиент</label>
                <select asp-items="@ViewBag.ClientId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Диапазон даты заказа</label>
            </div>
            <div class="form-group">
                <label class="control-label">От</label>
                <input type="datetime-local" name="startDate" value="@DateTime.Now.ToString()"/>
            </div>
            <div class="form-group">
                <label class="control-label">До</label>
                <input type="datetime-local" name="endDate" value="@DateTime.Now.ToString()"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Сформировать отчет" />
            </div>
        </form>
    </div>
</div>
