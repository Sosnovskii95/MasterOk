@model MasterOk.Models.ModelDataBase.Role

@{
    ViewData["Title"] = "Добавление новых прав доступа";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Добавление новых прав доступа</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="TitleRole" class="control-label"></label>
                <input asp-for="TitleRole" class="form-control" />
                <span asp-validation-for="TitleRole" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ValueRole" class="control-label"></label>
                <input asp-for="ValueRole" class="form-control" />
                <span asp-validation-for="ValueRole" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Добавить" class="btn btn-primary" />
                <a asp-action="Index" role="button" class="btn btn-secondary">Вернуться к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
